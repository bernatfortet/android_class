<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.AppCompat.Light.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    
    <style name="DinBig" parent="AppBaseTheme">
        <item name="android:background">#2E2E2E</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">66sp</item>
    </style>
    
    <style name="TipButton" parent="AppBaseTheme">
        <item name="android:textColor">#626262</item>
        <item name="android:textSize">33sp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
    </style>
    
    
    <color name="unactiveTip">#626262</color>
    <color name="activeTip">#ffffff</color>

</resources>
